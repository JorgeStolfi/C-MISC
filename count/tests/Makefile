# Last edited on 2023-09-18 00:43:12 by stolfi

PROGDIR := ..
PROG := count

TESTS := \
  3:10 \
  03:10 \
  +3:10 \
  10:-3:-01 \
  -3:10:2:5:2 \
  -plus:3:10 \
  -zeros:3:10 \
  -plus:-zeros:3:10:1:5:1 \
  3:10:0.25 \
  3:10:-1 

.PHONY: all single

all:
	for tt in ${TESTS}; do \
          ${MAKE} TEST="$$tt" single; \
        done
  
ifneq "/${TEST}" "/"
#######################################################################
#

ARGS := ${subst :, , ${TEST}}

single:
	echo "======================================================================" 
	${PROGDIR}/${PROG} ${ARGS}

#
#######################################################################
endif
